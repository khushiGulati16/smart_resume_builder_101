<!DOCTYPE html>
<html>
<head>
  <title><%= resume.name %> - Resume</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="template template3">
  <div class="resume-creative main-resume-container">
    <div class="left-panel">
      <h1><%= resume.name %></h1>
      <p class="role-title"><%= resume.role %></p>

      <section class="panel-section">
        <h3>Contact</h3>
        <p><%= resume.email %></p>
        <p><%= resume.phone %></p>
        <p><%= resume.address %></p>
        <p><%= resume.linkedin %></p>
      </section>

      <section class="panel-section">
        <h3>Skills</h3>
        <ul>
          <% resume.skills.split(",").forEach(skill => { %>
            <li><%= skill.trim() %></li>
          <% }) %>
        </ul>
      </section>
    </div>

    <div class="right-panel">
      <section>
        <h2>Education</h2>
        <p><%= resume.education %></p>
      </section>

      <section>
        <h2>Work Experience</h2>
        <% if (resume.experience1) { %>
          <p><%= resume.experience1 %></p>
        <% } %>
        <% if (resume.experience2) { %>
          <p><%= resume.experience2 %></p>
        <% } %>
        <% if (resume.experience3) { %>
          <p><%= resume.experience3 %></p>
        <% } %>
      </section>
    </div>
  </div>
  <a href="/api/resume/download/<%= id %>" class="download-button">Download as PDF</a>
</body>
</html>